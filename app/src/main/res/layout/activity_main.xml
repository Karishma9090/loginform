<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:gravity="center"
        android:textColor="@color/pink"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview1"
        android:layout_alignBottom="@id/textview1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="105dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="-89dp"
        android:ems="10"
        android:drawablePadding="15dp"
        android:drawableLeft="@drawable/baseline_person_24"
        android:hint="Enter Your Name"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="105dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="94dp"
        android:drawablePadding="15dp"
        android:drawableLeft="@drawable/baseline_add_task_24"
        android:hint="Enter Your password"
        android:inputType="textPassword"
        />
    <EditText
        android:id="@+id/editTextpassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="105dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        android:drawablePadding="15dp"
        android:drawableLeft="@drawable/baseline_add_24"
        android:hint="Confirm Password"
        android:inputType="textVisiblePassword"
        />
    <EditText
        android:id="@+id/editTextemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText2"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="105dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="50dp"
        android:drawablePadding="15dp"
        android:drawableLeft="@drawable/baseline_add_comment_24"
        android:hint="Enter Your Email"
        android:inputType="textEmailAddress"
        />
    <EditText
        android:id="@+id/editTextphnno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextemail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="105dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="50dp"
        android:drawablePadding="15dp"
        android:drawableLeft="@drawable/baseline_add_call_24"
        android:hint="Enter Your Phone number"
        android:inputType="textPhonetic"
        />
    <EditText
        android:id="@+id/editTextAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextphnno"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="105dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="50dp"
        android:drawablePadding="15dp"
        android:drawableLeft="@drawable/baseline_add_home_24"
        android:hint="Enter your address"
        android:inputType="textPostalAddress"
        />
    <Button
        android:id="@+id/btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextAddress"
        android:text="Signup"
        android:textSize="25dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/buttonshape"
        />


</RelativeLayout>